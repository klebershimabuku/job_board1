<div id='details'>	
	<%= simple_format @company.details %>
	
	<p>
	<% if @company.email? %>
		<%= link_to image_tag('email-icon32x32.gif', :size => '32x32'), "mailto: #{@company.email}" %>
	<% end %>

	<% if @company.twitter? %>
		<%= link_to image_tag('twitter.gif'), @company.twitter %>
	<% end %>

	<% if @company.facebook? %>
		<%= link_to image_tag('facebook.gif'), @company.facebook %>
	<% end %>
	</p>
</div>
