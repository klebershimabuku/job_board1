<div class='center'>
<h2>Re-enviar instruções de confirmação</h2>

<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <p>E-mail: <%= f.text_field :email %><%= f.submit "Re-enviar instruções de confirmação", :class => 'button' %></p>
<% end %>
</div>