<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
   "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
  <head>
	  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	  <title>Admin Dashboard</title>
	  <%= stylesheet_link_tag "blueprint/screen.css"%>
	  <%= stylesheet_link_tag "admin"%>
	  <%= javascript_include_tag :defaults %>
	  <%= yield :head %>
		<script type='text/javascript'>
		$(document).ready(function() {
		   $('#flash').delay(500).fadeIn('slow', function() {
		      $(this).delay(4000).fadeOut();
		   });
		});
		</script>  	  
  </head>
  <body>
			<% unless flash[:notice].blank? %>
			<div id="flash">
			<%= flash[:notice]%>
			</div>   
			<% end %>

			<% unless flash[:error].blank? %>
			<div id="flash">
			<%= flash[:error]%>
			</div>
			<% end %>
			
			<% unless flash[:alert].blank? %>
			<div id="flash">
			<%= flash[:alert]%>
			</div>
			<% end %>  	
			  	
  	<div id="topo">
			<div id="admin_dashboard">
				<header>
					<div class='site_link'><%= link_to '← Ir para o site', root_path %></div>
			    <div class='userbar'>
			      <p>
			      	<% if current_user.nil? %>
			      		<%= link_to('Entrar', new_user_session_path) %>&nbsp;<%= t(:or) %>&nbsp;<%= link_to 'Cadastre-se', new_user_registration_path %>
			        <% else %>
			      		Logado como&nbsp;<b><%= current_user.email %></b> <%= link_to "Sair", destroy_user_session_path %>
			      	<% end %>
			    	</p>
			    </div>
				<div class='clear'></div>
				</header>
				<h1>Admin Dashboard</h1>
				<aside id='nav'>
					<ul class='round'>
						<li><%= link_to 'Empregos', '#' %></li>
						<li><%= link_to 'Empresas', '#' %></li>
						<li><%= link_to 'Usuários', users_path %></li>
						<li><%= link_to 'Comentários', comments_manage_path %></li>
					</ul>
				</aside>
				<div class='clear'></div>
			</div>
  		
  	</div>
  <%= yield %>
  </body>
</html>
