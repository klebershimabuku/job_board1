<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <meta charset="utf-8" />
    <%= render 'layouts/stylesheets' %>
    <%= render 'layouts/javascripts' %>
    <%= auto_discovery_link_tag(:atom, 'http://feeds2.feedburner.com/Shigotodoko', :title => "ShigotoDoko feed") %>
  </head>

	<script type='text/javascript'>
	$(document).ready(function() {
	   $('#flash').delay(500).fadeIn('slow', function() {
	      $(this).delay(4000).fadeOut();
	   });
	});
	</script>
  <body>

  
			<% unless flash[:notice].blank? %>
			<div id="flash">
			<%= flash[:notice]%>
			</div>   
			<% end %>

			<% unless flash[:error].blank? %>
			<div id="flash">
			<%= flash[:error]%>
			</div>
			<% end %>
    
    <div id="container" class="layout-shadow">
      <% # logo & sign-up & sign-in links %>
      <%= render 'layouts/header' %>
      
      <% # notifications for admin only %>
      <%= render 'layouts/reminder' %>

      
      <% # site navbar %>
      <%= render 'layouts/navigation' %>
      
      <% # user shortcuts %>
      <%= render 'layouts/shortcuts' %>
      
      <%= yield(:flash_messages) %>


      <section>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
      
    </div>
  </body>
</html>

<% if Rails.env.development? %>
<% content_tag(:div, debug(params), :class => 'debug')  %>
<% end %>

