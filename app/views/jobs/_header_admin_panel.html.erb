<% if current_user && current_user.admin? %>
<div id="admin_header_panel" class="round">
  <div style="float: left; font-size: small">
    <p>
      Owner: <%= @job.user.email %><br />
      Criado há <%= time_ago_in_words( @job.created_at ) %> - <%= @job.created_at.strftime('%d/%m/%Y às %H:%M:%S') %><br />
      Atualizado há <%= time_ago_in_words( @job.updated_at ) %> - <%= @job.updated_at.strftime('%d/%m/%Y às %H:%M:%S') %><br />
      
      <% if @job.published? %>
      Publicado há <%= time_ago_in_words( @job.published_at ) %> - <%= @job.published_at.strftime('%d/%m/%Y às %H:%M:%S') %><br />
      <% end %>
      
      Visitas: <%= @job.visits %>
    </p>
    <% if @job.highlight? %>
      <p class='highlight'>Anúncio patrocinado.</p>
    <% end %>
  </div>
  <div style="float: right">
    <%= render 'lock_links' %>
    <%= render 'publish_links' %>
  </div>
</div>
<div class="clear"></div>
<hr size="1">
<% end %>