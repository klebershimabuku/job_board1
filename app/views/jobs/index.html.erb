        <div id="facebook">
          <script src="http://connect.facebook.net/pt_BR/all.js#xfbml=1"></script><fb:like-box href="http://www.facebook.com/shigotodoko" width="300" height="285" show_faces="true" stream="false" header="true" connections="10"></fb:like-box>
