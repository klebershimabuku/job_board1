<h3>Exibindo <%= pluralize(@jobs.count, 'anúncio') %></h3>

<div id="main_jobs">

    <table class="positions">
    <% @jobs.each do |job| %>
    <tr>
        <td>
            <div class="post">
                <ul class="title_and_company">
                    <li class="title"><%= link_to job.title, job %></li>
                    <li><%= 'empresa contratante' %></li>
                </ul>
                <ul class="location_and_created_date">
                    <li><%= job.location %></li>
                    <li class="created_date"><%= time_ago_in_words t(job.created_at) %></li>
                </ul>
            </div>
        <hr size="1">
        </td>
    </tr>
    <% end %>
    </table>


    <div id="jobs_sidebar">
        <div>
            <div id="ad_sample" style="padding-top: 100px; width: 300px; height: 150px;">
              <h1>Sample Ad (300x250)</h1>
            </div>
        </div>
    </div>

</div>

<div class="clear"></div>

<br />
<% if can? :new, Job %>
<p><%= link_to 'Criar novo anúncio', new_job_path, :class => 'button' %></p>
<% end %>

<hr size="1"/>
<% if current_user && current_user.announcer? %>
    <p>* <%= t(:you_have) + " " + pluralize(@pending.count, t(:announcer)) %> aguardando revisão.</p>
<% end %>
